{
	"name": "rust-test-highlight",
	"displayName": "rust-test-highlight",
	"description": "Give your rust tests a background color so they visually stand out from the rest of the file",
	"version": "0.0.1",
	"license": "MIT",
	"engines": {
		"vscode": "^1.86.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:rust"
	],
	"main": "./out/extension.js",
	"contributes": {
		"colors": [
			{
				"id": "rustTestHighlight.backgroundColor",
				"description": "Background decoration color for tests",
				"defaults": {
					"dark": "#3b3b3b55",
					"light": "#cacaca55",
					"highContrast": "#ebebeb55"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.86.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"eslint": "^8.56.0",
		"typescript": "^5.3.3",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.9"
	}
}
